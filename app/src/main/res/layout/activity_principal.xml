<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollview_principal"
    style="@style/scrollview"
>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/principal_layout"
        style="@style/layout"
        tools:context=".principal.Principal">
        <ImageView
            android:id="@+id/user_image"
            style="@style/user_image"
            tools:ignore="MissingConstraints"
            >
        </ImageView>
        <Button
            android:id="@+id/btn_profilepicture"
            style="@style/btn_profilepicture"

            tools:ignore="MissingConstraints"></Button>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/user_layout_principal"
            style="@style/nombre_usuario_layout"
            tools:ignore="MissingConstraints"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/user_input_principal"
                style="@style/user_input"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/nombre_layout_principal"
            style="@style/nombre_layout_principal"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/nombre_input_principal"
                style="@style/nombre_usuario"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/apellido_layout_principal"
            style="@style/surname_layout_principal"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/apellido_input_principal"
                style="@style/surname"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/phone_layout_principal"
            style="@style/phone_layout"
            tools:ignore="MissingConstraints">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/phone_input_principal"
                style="@style/telefono"

                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/mail_layout_principal"
            style="@style/email_layout_principal"
            tools:ignore="MissingConstraints"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/mail_input_principal"
                style="@style/email"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btn_principal"
            style="@style/btn_principal"
            tools:ignore="MissingConstraints">

        </Button>

        <ImageView
            android:id="@+id/img_background_principal"
            style="@style/image_bg_principal"
            tools:ignore="MissingConstraints"
            >
        </ImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>