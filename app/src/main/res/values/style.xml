<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="layout">
        <item name="android:background">@drawable/colorgradient</item>

    </style>

    <style name="txt_login">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/letras</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="android:layout_marginTop">@dimen/top_border</item>
        <item name="android:layout_marginLeft">@dimen/border_left_right</item>
        <item name="android:layout_marginRight">@dimen/border_left_right</item>
        <item name="android:textSize">@dimen/text_height</item>
    </style>

    <style name="userlayout" parent="txt_login">
        <item name="android:layout_marginTop">@dimen/text_height</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:hint">@string/user</item>


    </style>

    <style name="passwordlayout" parent="userlayout">
        <item name="layout_constraintTop_toBottomOf">@id/user_layout</item>
        <item name="android:hint">@string/password</item>

    </style>

    <style name="image_bg">
        <item name="android:scaleType">fitEnd</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="button">
        <item name="layout_constraintTop_toBottomOf">@id/password_layout</item>
        <item name="layout_constraintRight_toRightOf">@id/password_layout</item>
        <item name="layout_constraintLeft_toLeftOf">@id/password_layout</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/top_border</item>

    </style>

</resources>